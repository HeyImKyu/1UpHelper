<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>YourCelesteMod</AssemblyName>
    <RootNamespace>YourCelesteMod</RootNamespace>
    <LangVersion>latest</LangVersion>

    <!-- Build a DLL -->
    <OutputType>Library</OutputType>

    <!-- Prevent shipping any referenced game DLLs -->
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <!-- Celeste game assembly -->
    <Reference Include="Celeste">
      <HintPath>C:\Path\To\Celeste\Celeste.exe</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Everest assembly -->
    <Reference Include="Everest">
      <HintPath>C:\Path\To\Celeste\Mods\Everest\everest.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- MonoMod / patch support -->
    <Reference Include="MonoMod">
      <HintPath>C:\Path\To\Celeste\Mods\Everest\MonoMod.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

</Project>

